{
    "info": {
      "name": "Moon Insurance API Collection - GKE Testing",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
      "_postman_id": "moon-insurance-collection"
    },
    "item": [
      {
        "name": "Agent Service",
        "item": [
          {
            "name": "Create Agent",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"agent_code\": \"AGENT001\",\n  \"agent_name\": \"John Doe\",\n  \"team_name\": \"Alpha Team\",\n  \"branch_name\": \"Colombo\"\n}"
              },
              "url": { "raw": "{{baseUrl}}/agent", "host": ["{{baseUrl}}"], "path": ["agent"] }
            }
          },
          {
            "name": "Get Agent",
            "request": {
              "method": "GET",
              "url": { "raw": "{{baseUrl}}/agent/AGENT001", "host": ["{{baseUrl}}"], "path": ["agent", "AGENT001"] }
            }
          },
          {
            "name": "Update Agent",
            "request": {
              "method": "PUT",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"agent_name\": \"Jane Doe\",\n  \"branch_name\": \"Galle\"\n}"
              },
              "url": { "raw": "{{baseUrl}}/agent/AGENT001", "host": ["{{baseUrl}}"], "path": ["agent", "AGENT001"] }
            }
          },
          {
            "name": "Delete Agent",
            "request": {
              "method": "DELETE",
              "url": { "raw": "{{baseUrl}}/agent/AGENT001", "host": ["{{baseUrl}}"], "path": ["agent", "AGENT001"] }
            }
          }
        ]
      },
      {
        "name": "Integration Service (Sales)",
        "item": [
          {
            "name": "Create Sales",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"agent_code\": \"AGENT001\",\n  \"product_name\": \"Life Insurance\",\n  \"team_name\": \"Alpha Team\",\n  \"branch_name\": \"Colombo\"\n}"
              },
              "url": { "raw": "{{baseUrl}}/sales", "host": ["{{baseUrl}}"], "path": ["sales"] }
            }
          },
          {
            "name": "Get Sales by Agent",
            "request": {
              "method": "GET",
              "url": { "raw": "{{baseUrl}}/sales/agent/AGENT001", "host": ["{{baseUrl}}"], "path": ["sales", "agent", "AGENT001"] }
            }
          }
        ]
      },
      {
        "name": "Notification Service",
        "item": [
          {
            "name": "Check Agent Sales Target",
            "request": {
              "method": "GET",
              "url": { "raw": "{{baseUrl}}/notification/check_target/AGENT001", "host": ["{{baseUrl}}"], "path": ["notification", "check_target", "AGENT001"] }
            }
          }
        ]
      },
      {
        "name": "Aggregator Service",
        "item": [
          {
            "name": "Best Performing Teams",
            "request": {
              "method": "GET",
              "url": { "raw": "{{baseUrl}}/aggregation/best_teams", "host": ["{{baseUrl}}"], "path": ["aggregation", "best_teams"] }
